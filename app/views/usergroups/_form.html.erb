<%= form_for @usergroup do |f| %>
  <%= base_errors_for @usergroup %>
  <%= text_f f, :name %>
  <%= multiple_checkboxes f, :usergroups, @usergroup, Usergroup, :label => "User Groups" %>
  <%= multiple_checkboxes f, :users, @usergroup, User, :label => "Users" %>
  <%= select_f f, :auth_source_id, AuthSource.all, :id, :to_label %>
  <%= submit_or_cancel f %>
<% end %>
